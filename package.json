{
  "name": "tcg-shopify-app",
  "version": "0.1.0",
  "description": "TCG Shopify application with SSR",
  "main": "build/server.js",
  "type": "module",
  "engines": {
    "node": ">=22.19.0 <23"
  },
  "scripts": {
    "clean:client": "rm -rf dist/client",
    "clean:server": "rm -rf dist",
    "build": "npm run build:server && npm run clean:client && vite build",
    "build:server": "tsc && tsc-alias",
    "dev:server": "tsx watch src/server.ts",
    "dev": "npm run build:server && node dist/server.js --dev",
    "start:prod": "node dist/server.js",
    "fix": "biome format --write . && biome lint --write .",
    "fix:unsafe": "biome check --write --unsafe .",
    "typecheck": "tsc --noEmit && tsc --noEmit -p src/client/tsconfig.json",
    "typecheck:server": "tsc --noEmit",
    "typecheck:client": "tsc --noEmit -p src/client/tsconfig.json",
    "migrate": "tsx migrations/migrate.ts",
    "migrate:make": "knex migrate:make -x ts",
    "migrate:rollback": "tsx migrations/rollback.ts",
    "prepare": "husky"
  },
  "keywords": [
    "tcg",
    "shopify",
    "trading-cards",
    "ecommerce",
    "fastify",
    "react",
    "ssr"
  ],
  "author": "your-name",
  "license": "UNLICENSED",
  "dependencies": {
    "@fastify/auth": "^5.0.2",
    "@fastify/autoload": "^6.3.1",
    "@fastify/compress": "^8.1.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/env": "^5.0.2",
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/redis": "^7.0.2",
    "@fastify/sensible": "^6.0.3",
    "@fastify/session": "^11.1.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/vite": "^8.2.0",
    "@scalar/fastify-api-reference": "^1.35.6",
    "@shopify/shopify-api": "^12.0.0",
    "@shopify/shopify-app-session-storage-redis": "^5.0.0",
    "close-with-grace": "^2.2.0",
    "clsx": "^2.1.1",
    "cron-parser": "^5.4.0",
    "dotenv": "^17.2.2",
    "fastify": "^5.6.0",
    "fastify-plugin": "^5.0.1",
    "fastify-sse-v2": "^4.2.1",
    "fastify-type-provider-zod": "^6.0.0",
    "knex": "^3.1.0",
    "pg": "^8.16.3",
    "pino": "^9.9.5",
    "pino-pretty": "^13.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1",
    "rotating-file-stream": "^3.2.7",
    "tailwind-merge": "^3.3.1",
    "toad-scheduler": "^3.1.0",
    "tsx": "^4.20.5",
    "vite": "^7.1.5",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^24.5.1",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "postcss-preset-env": "^10.3.1",
    "tailwindcss": "^4.1.13",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2"
  }
}
